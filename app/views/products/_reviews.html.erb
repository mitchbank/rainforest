<% @product.reviews.each do |review| %>
		<div class="review">
			<div class="poster">
				<% if review.user != nil %>
					 <%= link_to "Edit review", edit_product_review_path(@product, review) %> | <%= link_to "Delete review", product_review_path(@product, review), method: :delete, class: "delete_review" %>
					Posted by <%= review.user.name %> Added on: <%= review.created_at %>
				<% end %>
			</div>
			<p class="comment">
				<%= review.comment %>
			</p>
		</div>
	<% end %>